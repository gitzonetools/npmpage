doctype html
head
  title #{title}
  link(rel="stylesheet" href="https://push.rocks/assets/css/markdown.css")
  style.
    @import 'https://fonts.googleapis.com/css?family=Roboto';
    body {
      margin:0px;
      padding:20px;
      background: #fafafa;
      background-repeat: repeat;
      font-family: 'Roboto', sans-serif;
    }
    
    .content {
      background: #ffffff;
      box-shadow: 0px 0px 5px -1px rgba(0,0,0,0.20);
      border-radius: 4px; 
      max-width: 1200px;
      margin: auto;
      padding: 50px;
    }

    
body
  .content
    .markdown-body !{content}
