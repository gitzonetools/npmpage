{
  "name": "npmpage",
  "version": "1.0.21",
  "description": "create pages for npm modules.",
  "main": "dist/ts/index.js",
  "typings": "dist/ts/index.d.ts",
  "bin": {
    "npmpage": "dist/cli.js"
  },
  "scripts": {
    "test": "(npm run clean && npm run compile && npm run setupTest && npm run npmpage && npm run docsSelf)",
    "clean": "(rm -rf test/)",
    "compile": "(npmts --notest --nodocs && plr install && plr && plr bundle)",
    "npmpage": "(cd test && node ../dist/cli.js --host gitlab)",
    "local": "(npm run compile && npm run localNpmpage)",
    "localNoFrontend": "(npmts --notest --nodocs && npm run localNpmpage)",
    "localNpmpage": "(cd test && node ../dist/cli.js --publish gitlab --serve)",
    "docsSelf": "node ./dist/cli.js",
    "setupTest": "(git clone https://gitlab.com/sandboxzone/sandbox-npmts.git test/ && cd test && npm install && npmts)"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/pushrocks/npmpage.git"
  },
  "keywords": [
    "page",
    "generator"
  ],
  "author": "Lossless GmbH",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/pushrocks/npmpage/issues"
  },
  "homepage": "https://gitlab.com/pushrocks/npmpage#README",
  "dependencies": {
    "@types/marked": "0.0.28",
    "beautylog": "^6.0.0",
    "early": "^2.0.35",
    "lik": "^1.0.27",
    "marked": "^0.3.6",
    "projectinfo": "^3.0.1",
    "q": "^1.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.1",
    "shelljs": "^0.7.5",
    "smartbrowser": "^1.0.1",
    "smartcli": "^2.0.1",
    "smartfile": "^4.1.0",
    "smartpug": "^1.0.4",
    "smartsystem": "^1.0.12",
    "systemjs": "0.19.41",
    "tsn": "^2.0.13",
    "typings-global": "^1.0.14"
  },
  "devDependencies": {
    "typings-test": "^1.0.3"
  }
}
